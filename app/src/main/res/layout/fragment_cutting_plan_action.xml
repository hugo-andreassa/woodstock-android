<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cuttingplan_action_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    tools:context=".ui.cuttingplan.CuttingPlanActivity">

    <LinearLayout
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/CustomLinearLayout.Form">
            <ImageView
                android:src="@drawable/ic_height"
                style="@style/CustomImageView.Form"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cuttingplan_height_layout"
                app:suffixText="cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cuttingplan_height"
                    android:hint="Altura"
                    android:inputType="numberSigned"
                    android:maxLength="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:src="@drawable/ic_width"
                style="@style/CustomImageView.Form"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cuttingplan_width_layout"
                app:suffixText="cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cuttingplan_width"
                    android:hint="Largura"
                    android:inputType="numberSigned"
                    android:maxLength="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/CustomLinearLayout.Form">
            <ImageView
                android:src="@drawable/ic_description"
                android:layout_gravity="center"
                style="@style/CustomImageView.Form"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cuttingplan_comment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="70"
                app:endIconMode="clear_text">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cuttingplan_comment"
                    android:hint="ComentÃ¡rio"
                    android:lines="2"
                    android:maxLength="70"
                    android:gravity="top|start"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    android:inputType="textMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            style="@style/CustomLinearLayout.Form">

            <Button
                android:id="@+id/cuttingplan_quantity_less_button"
                android:text="-"
                android:layout_width="48dp"
                android:layout_height="48dp"/>

            <TextView
                android:id="@+id/cuttingplan_quantity"
                android:text="1"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <Button
                android:id="@+id/cuttingplan_quantity_more_button"
                android:text="+"
                android:layout_width="48dp"
                android:layout_height="48dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/cuttingplan_save_button"
            android:text="Salvar"
            android:layout_marginTop="30dp"
            style="@style/CustomButton" />

        <Button
            android:id="@+id/cuttingplan_delete_button"
            android:layout_marginTop="15dp"
            style="@style/CustomButton.Delete"/>
    </LinearLayout>
</ScrollView>
