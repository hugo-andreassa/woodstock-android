<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/client_action_fragment"
    android:background="?android:attr/windowBackground"
    tools:context=".ui.material.MaterialActivity">

    <LinearLayout
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/CustomLinearLayout.Form">
            <ImageView
                style="@style/CustomImageView.Form"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/material_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/material_name"
                    android:hint="Nome do Material"
                    android:maxLength="60"
                    android:inputType="textCapSentences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/CustomLinearLayout.Form">
            <ImageView
                android:src="@drawable/ic_description"
                android:layout_gravity="center"
                style="@style/CustomImageView.Form"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/material_description_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="70"
                app:endIconMode="clear_text">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/material_description"
                    android:hint="Descrição"
                    android:lines="2"
                    android:maxLength="70"
                    android:gravity="top|start"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    android:inputType="textMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            style="@style/CustomLinearLayout.Form">
            <ImageView
                style="@style/CustomImageView.Form"/>

            <TextView
                android:text="Unidade de medida: "
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/material_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"/>
        </LinearLayout>

        <LinearLayout
            style="@style/CustomLinearLayout.Form"
            android:orientation="vertical">

            <TextView
                android:text="Quantidade miníma em Estoque"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <LinearLayout
                style="@style/CustomLinearLayout.Form">
                <Button
                    android:id="@+id/material_stock_minimum_less_button"
                    android:text="-"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/material_stock_minimum"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/material_stock_minimum_more_button"
                    android:text="+"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/CustomLinearLayout.Form"
            android:orientation="vertical">

            <TextView
                android:text="Quantidade em Estoque"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <LinearLayout
                style="@style/CustomLinearLayout.Form"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/material_stock_less_button"
                    android:text="-"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/material_stock"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/material_stock_more_button"
                    android:text="+"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/material_save_button"
            android:text="@string/salvar"
            android:layout_marginTop="40dp"
            style="@style/CustomButton"/>

        <Button
            android:id="@+id/material_delete_button"
            android:layout_marginTop="15dp"
            style="@style/CustomButton.Delete"/>
    </LinearLayout>
</ScrollView>
