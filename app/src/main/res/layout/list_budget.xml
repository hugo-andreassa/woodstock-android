<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/budget_list_creation_date"
            android:text="12/10/2020 14:38:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/budget_list_status"
            android:text="Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/budget_list_more_button"
            android:src="@drawable/ic_add"
            android:clickable="?selectableItemBackground"
            style="@style/CustomImageButton"/>

        <ImageButton
            android:id="@+id/budget_list_delete_button"
            android:src="@drawable/ic_delete"
            android:clickable="?selectableItemBackground"
            style="@style/CustomImageButton"/>
    </LinearLayout>

</LinearLayout>